{%- css %}
  {% include "public/css/toc.css" %}
{%- endcss %}

{% if content | toc %}
  <div class="
    toc
    sticky top-0
    rounded-xl
    p-4
    "
    style="cursor: pointer">
    <details open>
      <summary accesskey="c" title="(Alt + C)">
        <span class="details text-lg font-bold">Table of Contents</span>
      </summary>

      <div class="inner pt-4"> {{ content | toc | safe }} </div>
    </details>
  </div>
{% endif %}
