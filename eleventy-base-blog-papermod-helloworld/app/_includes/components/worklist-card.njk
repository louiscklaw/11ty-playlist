<a href="{{ post.url }}">
  <div class="
    worklist-card
    p-2 lg:p-4
    border border-slate-150 rounded-xl
    prose prose-p:mb-0 prose-h2:text-base
    ">
    {% if post.data.title %}
      <h2>{{ post.data.title }}</h2>
    {% else %}
      <code>{{ post.url }}</code>
    {% endif %}

    <p class="mt-4">Read Install and Update instructions here</p>
    <div>
      <time datetime="{{ post.date | htmlDateString }}">
        {{ post.date | readableDate("LLLL yyyy") }}
      </time>
      · 3 min · Aditya Telange
    </div>
  </div>
</a>
